packages:
    yum:
        amazon-linux-extras: []
        jq: []

commands:
    01_postgres_activate:
        command: sudo amazon-linux-extras enable postgresql10
    02_postgres_install:
        command: sudo yum install -y postgresql-devel
    03_yarn_pkg_install:
        command: su webapp -c "yarn --production"
    04_home_webapp:
        command: mkdir -p /home/webapp && chmod 700 /home/webapp